# ============================================
# Scout Production Configuration for Pi 5
# ============================================
# This file is production-ready for Raspberry Pi 5 deployment
# Copy to Pi 5 as .env after deployment

# ============================================
# LLM Service Configuration (Local Ollama)
# ============================================
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5:3b
LLM_FALLBACK_MODEL=gemma2:2b
OLLAMA_HOST=http://localhost:11434

# Generation Parameters (optimized for Pi 5)
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=300

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=data/scout.db
CHROMA_PERSIST_DIR=data/chroma_data

# ============================================
# Cache Configuration
# ============================================
# Two-tier caching: Memory (L1) + File (L2)
CACHE_DIR=data/cache
CACHE_MEMORY_MAX_ENTRIES=100
CACHE_TTL=3600

# ============================================
# Application Settings (Production)
# ============================================
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# Security
# ============================================
SECRET_KEY=scout-pi5-production-key-change-after-deployment
CORS_ORIGINS=http://192.168.1.21:8000,http://localhost:8000

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=data/uploads
OUTPUT_DIR=data/outputs
TEMPLATE_DIR=src/templates
